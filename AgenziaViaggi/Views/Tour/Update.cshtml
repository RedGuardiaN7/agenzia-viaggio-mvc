@model Tour

<div class="container">

    <form asp-controller="Tour" asp-action="Update" method="post" class="title-card bg-tabella py-4 px-4">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label>Nome:</label>
            <input asp-for="Title" type="text" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Descrizione:</label>
            <textarea asp-for="Description" rows="10" class="d-block w-100"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Destinazione:</label>
            <input asp-for="Destinations" type="text" class="form-control" />
            <span asp-validation-for="Destinations" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Giorni:</label>
            <input asp-for="Days" type="text" class="form-control" />
            <span asp-validation-for="Days" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Prezzo:</label>
            <input asp-for="Price" type="text" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Path Immagine:</label>
            <input asp-for="Image" type="text" class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-info">Aggiorna</button>
    </form>

</div>
