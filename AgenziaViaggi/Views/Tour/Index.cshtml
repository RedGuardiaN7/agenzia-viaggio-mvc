@model List<Tour>


@if (Model.Count == 0)
{
    <h3>No Vacation Packages available!</h3>
}
else
{
    <div class="container">
        <div class="row main row  ">

            @foreach(Tour tour in Model){

                <div class="col-md-6 col-xl-4">
                <div class="card shadow bg-body rounded ">
                    <img src="@tour.Image" class="card-img-top" alt="SEA">
                    <div class="card-body p-0">
                        <h4 class="card-title text-bg-warning text-white p-3">@tour.Title</h4>

                        <p class="card-text text-center fw-lighter p-4 text-white">
                            @tour.Description
                        </p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <p class="text-warning fw-semibold">@tour.Days giorni - @tour.Destinations</p>
                                <p> <b>@tour.Price €</b> <small class="text-muted"> /persona </small></p>
                            <a class="btn btn-primary" href="@Url.Action("Details", "Tour", new { id = @tour.Id } )" role="button">Dettagli</a>
                        </li>

                    </ul>
                </div>
            </div>

            }

            



        </div>

    </div>

}









