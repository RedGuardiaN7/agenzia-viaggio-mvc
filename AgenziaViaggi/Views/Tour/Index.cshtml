@model List<Tour>

<!doctype html>
<html lang="en">

       

    <body>

    
        <main>
    

            @if (Model.Count == 0)
            {
                    <h3>No Vacation Packages available!</h3>
            }
            else
            {
                <div class="container">
                    <div class="row main row  ">
          

                        <div class="col-md-6 col-xl-4">
                            <div class="card shadow bg-body rounded ">
                                <img src="@tour.image" class="card-img-top" alt="SEA">
                                <div class="card-body p-0">
                                    <h4 class="card-title text-bg-warning text-white p-3">@tour.name</h4>

                                    <p class="card-text text-center fw-lighter p-4">
                                        @tour.description
                                    </p>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        <p class="text-warning fw-semibold"> 2 days - 2 destinations</p>
                                        <p> <b>@tour.price</b> <small class="text-muted"> /persona </small></p>
                                        <a class="btn btn-primary" href="@Url.Action("Detail", "Tour", new { id = @tour.Id } )" role="button">Details</a>
                                    </li>

                                </ul>
                            </div>
                        </div>



                    </div>

                </div>

            }





        </main>




                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
                        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
                        crossorigin="anonymous"></script>
                <script type="text/javascript" src="script.js"></script>
    </body>

</html>









