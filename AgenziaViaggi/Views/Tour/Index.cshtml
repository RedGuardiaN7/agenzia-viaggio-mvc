@model List<Tour>
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body>
    <div class="container text-center border-0">

        <!-- primo contenitore -->
        <div class="row justify-content-md-center ">
            <div class="col-12 col-md-6 m-3">
                <h1 class="p-2">
                    Our amazing tours
                </h1>
                <p class="pb-2">
                    Lorem ipsum, dolor sit amet consectetur adipisicing elit. Rem quo aperiam ipsa? Possimus officiis
                    quo et
                    ipsum magnam cum nobis? Enim, voluptatibus asperiores reprehenderit laboriosam ducimus odit
                    exercitationem
                    recusandae explicabo.
                </p>
            </div>
        </div>
    </div>
    <!-- secondo contenitore  -->


    

@if (Model.Count == 0)
{
        <h3>No Vacation Packages available!</h3>
}
else
{
    <div class="container">
        <div class="row main row  ">
          

            <div class="col-md-6 col-xl-4">
                <div class="card shadow bg-body rounded ">
                    <img src="@tour.image" class="card-img-top" alt="SEA">
                    <div class="card-body p-0">
                        <h4 class="card-title text-bg-warning text-white p-3"></h4>

                        <p class="card-text text-center fw-lighter p-4">
                            Some quick example text to build on the card
                            title and make up the bulk of
                            the
                            card's content.
                        </p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <p class="text-warning fw-semibold"> 2 days - 2 destinations</p>
                            <p> <b>350€</b> <small class="text-muted"> /persona </small></p>

                        </li>

                    </ul>
                </div>
            </div>



        </div>

    </div>

}
















