@model Tour

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Dettagli viaggio</h1>
            </div>
            <div class="post-single-image-container">
                <img src="@Model.Image">
            </div>
            <p>
                <strong>Titolo:</strong>
                @Model.Title
            </p>
            <p>
                <strong>Descrizione:</strong>
                @Model.Description
            </p>
            <p>
                <strong>Destinazioni:</strong>
                @Model.Destinations
            </p>
            <p>
                <strong>Giorni di tour:</strong>
                @Model.Days giorni
            </p>
            <p>
                <strong>Prezzo:</strong>
                @Model.Price
            </p>
        </div>
    </div>
</div>