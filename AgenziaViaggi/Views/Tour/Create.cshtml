@model 

<div class="container">

    <form asp-controller="Tour" asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label>Nome:</label>
            <input asp-for="name" type="text" class="form-control" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Descrizione:</label>
            <textarea asp-for="description" rows="10" class="d-block w-100"></textarea>
            <span asp-validation-for="description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Prezzo:</label>
            <input asp-for="price" type="text" class="form-control" />
            <span asp-validation-for="price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Path Immagine:</label>
            <input asp-for="photo" type="text" class="form-control" />
            <span asp-validation-for="photo" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Salva</button>
    </form>

</div>